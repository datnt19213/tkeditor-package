{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "b",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "resolveJsonModule": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "preserveSymlinks": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "src"
  ]
}